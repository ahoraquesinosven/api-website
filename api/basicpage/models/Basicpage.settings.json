{
  "connection": "default",
  "collectionName": "basicpages",
  "info": {
    "name": "basicpage",
    "description": "Páginas sueltas que se usan en el sitio, cómo la sección de Historia"
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "unique": true,
      "required": true,
      "type": "text"
    },
    "description": {
      "required": true,
      "default": "Description",
      "type": "richtext"
    },
    "MainImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "unique": true,
      "required": true,
      "type": "text"
    }
  }
}
